<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/createCourseDialogLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Adding Discipline"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <EditText 
        android:id="@+id/createCourseDialogInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/createCourseDialogLabel"
        android:paddingTop="15dip"
        android:hint="Course Name"/>
    
    <Button 
        android:id="@+id/createCourseDialogButtonNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No"
        android:layout_below="@id/createCourseDialogInput"
        android:paddingTop="15dip"
        />
    
    <Button 
        android:id="@+id/createCourseDialogButtonYes"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Yes"
        android:layout_below="@id/createCourseDialogInput"
        android:layout_toRightOf="@id/createCourseDialogButtonNo"
        android:paddingTop="15dip"/>

</RelativeLayout>
